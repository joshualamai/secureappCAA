<h1>User Logs</h1>

<% if @logs.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Action</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% @logs.each do |log| %>
        <tr>
          <td><%= log.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          <td><%= log.action %></td>
          <td><%= log.details %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No logs available.</p>
<% end %>
